@model DnD.Models.AdventureParticipation

<div class="ui card">
    <div class="content">
        <div class="header">
            <a asp-action="Details" asp-controller="Character" asp-route-id="@Model.Adventurer.Id">@Html.DisplayFor(model => model.Adventurer.Name) (@Html.DisplayFor(model => model.Adventurer.Race.Name))</a>
            <span data-tooltip="@Html.DisplayFor(model => model.Adventurer.Gender)"><i class="@Html.GenderIcon(Model.Adventurer.Gender) icon"></i></span>
        </div>
        <div class="meta">@Html.DisplayFor(model => model.Adventurer.Owner.DisplayName)</div>
    </div>
    @if (!ViewData.ContainsKey("HideActions"))
    {
        <div class="extra content">
            <div class="ui two buttons">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="ui green button"><i class="write icon"></i> Edit</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="ui red button"><i class="delete icon"></i> Delete</a>
            </div>
        </div>
    }
</div>
