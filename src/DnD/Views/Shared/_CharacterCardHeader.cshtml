@model DnD.Models.Character

<div class="content">
    <div class="right floated meta">@Html.DisplayFor(model => model.Race.Name)</div>
    <div class="header">
        <a asp-action="Details" asp-controller="Character" asp-route-id="@Model.Id">@Html.DisplayFor(model => model.Name)</a>
        <span data-tooltip="@Html.DisplayFor(model => model.Gender)"><i class="@Html.GenderIcon(Model.Gender) icon"></i></span>
    </div>
    <div class="meta">@Html.DisplayFor(model => model.Owner.DisplayName)</div>
</div>